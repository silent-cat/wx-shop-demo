/* pages/search/search.wxss */
page{
  padding: 20rpx;
  background-color: #dedede;
}
.search_row{
  display: flex;
  height: 60rpx;
}
input{
  flex: 1;
  height:100%;
  background-color: #fff;
  padding-left: 30rpx;
  /* margin-right: 20rpx; */
}
button{
  font-size: 26rpx;
  height: 100%;
  background-color: #fff;
  line-height: 60rpx;
  margin-left: 16rpx;
}

.search_content{
  margin-top: 20rpx;
}
.search_item{
  background-color: #fff;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}