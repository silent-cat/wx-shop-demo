}

.collect_tips{
  padding: 15rpx;
  border: 1rpx solid var(--themeColor);
  margin-left: 15rpx;
  background-color: #fff;
}
.active{
  color: var(--themeColor);
}

/* pages/goods_list/goods_list.wxss */
 .goods_item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
 .goods_item .goods_img_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
 .goods_item .goods_img_warp image {
  width: 70%;
}
 .goods_item .goods_info_warp {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
 .goods_item .goods_info_warp .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
 .goods_item .goods_info_warp .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
