/**app.wxss**/
@import "./styles/iconfont.wxss";

/* 在微信小程序中不支持通配符 */

page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色 通过变量来实现 */
page {
  /* 定义主题颜色 */
  --themeColor: #8651d7;
  /* 定义统一字体大小假设设计稿大小375px */
  font-size: 28rpx;
}

image {
  width: 100%;
}
